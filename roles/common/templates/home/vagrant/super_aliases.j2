alias i3guide="w3m http://i3wm.org/docs/userguide.html"
alias wikip="wikipediaSearch"
alias awiki="w3m https://wiki.archlinux.org/"

# music
alias mympd='echo -n "Localhost MPD Server    " | pv -qL 20 && mplayer http://localhost:8000'
