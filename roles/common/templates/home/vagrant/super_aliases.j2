# tmux
alias ta='tmux attach'
alias tl='tmux ls'
alias tmdt="tmux detach"

# netstat
alias nstat="netstat -p TCP -eWc"

# fun
alias ncmatrix="ncmatrix -I enp4s0 -R red -T yellow"
alias recterm="echo -n Recording Terminal | pv -qL 10 && asciinema rec"
